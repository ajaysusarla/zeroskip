# zeroskip library
-include ../config.mk

# Object files
ZS_LIBOBJS =  			\
	btree.o			\
	cstring.o		\
	log.o			\
	mappedfile.o		\
	strarray.o		\
	util.o			\
	zeroskip.o		\
	zeroskip-dotzsdb.o	\
	zeroskip-header.o	\
	$(NULL)

# Headers
ZS_HDRS = \
	$(NULL)

all: clean-ar $(AR_LIB_FILE)

Makefile.dep:
	$(ZS_CC) -MM *.c > Makefile.dep 2> /dev/null || true

-include Makefile.dep

%.o:  %.c
	$(ZS_CC) -c $<

$(AR_LIB_FILE): $(ZS_LIBOBJS)
	$(ZS_AR) $(ARFLAGS) $@ $^

clean-ar:
	$(ZS_RM) $(AR_LIB_FILE)

clean:
	$(ZS_RM) $(ZS_LIBOBJS) $(AR_LIB_FILE) *.o Makefile.dep

check-syntax:
	$(CC) $(CFLAGS) -Wextra -pedantic -fsyntax-only $(CHK_SOURCES)

.PHONY: all clean check-syntax clean-ar
